{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "outDir": "build",
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
  },
  "include": [
    "./src"
  ],
  "typesafe-store": {
    "storePath": "./src/store",
    "framework": "react"
  }
}