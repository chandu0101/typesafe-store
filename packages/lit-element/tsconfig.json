{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ES5",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "plugins": [],
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "typeRoots": [
      "src/types",
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules"
  ],
  "references": [
    {
      "path": "../store"
    }
  ]
}